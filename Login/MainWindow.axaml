<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Login.MainWindow"
        Title="Login">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Login" FontSize="24" HorizontalAlignment="Center" Margin="0,20,0,20" Grid.Row="0"/>
        
        <StackPanel Grid.Row="1" Margin="20">
            <TextBlock Text="Email:" Margin="0,0,0,5"/>
            <TextBox Watermark="Enter your email" Margin="0,0,0,10"/>
            
            <TextBlock Text="Password:" Margin="0,0,0,5"/>
            <TextBox PasswordChar="*" Watermark="Enter your password" Margin="0,0,0,10"/>
        </StackPanel>
        
        <Button Content="Login" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="2"/>
        
        <TextBlock Text="Forgot password?" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="3"/>
    </Grid>
</Window>